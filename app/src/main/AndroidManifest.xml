<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.padc.themoviebookingapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MovieBookingApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheMovieBookingApp">
        <activity
            android:name=".activities.SeatingPlanActivity"
            android:exported="true" >
        </activity>
        <activity
            android:name=".activities.ReceiptActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.NewPaymentCardActivity"
            android:exported="true" />
        <activity
            android:name=".activities.PaymentCardActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.SnacksActivity"
            android:exported="true" />
        <activity
            android:name=".activities.DateTimeActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieBookingApp.PrimaryColorStatusBar">
        </activity>
        <activity
            android:name=".activities.MovieDetailActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieBookingApp.TransparentStatusBar" />
        <activity
            android:name=".activities.HomeScreenActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.SetUpActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.GetStartedActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieBookingApp.PrimaryColorStatusBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
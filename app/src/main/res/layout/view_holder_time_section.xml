<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_large">

    <RelativeLayout
        android:id="@+id/rlTimeSlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_transparent_button"
        android:padding="@dimen/margin_medium_2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTimeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:30"
            android:textSize="@dimen/text_regular_2x"
            android:fontFamily="@font/gotham_light"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTimeAmPm"
            android:layout_marginStart="@dimen/margin_card_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvTimeNumber"
            android:fontFamily="@font/gotham_light"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small"
            android:layout_centerVertical="true"
            android:text="AM"/>

    </RelativeLayout>

</FrameLayout>
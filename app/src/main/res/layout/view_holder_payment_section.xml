<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_medium_2"
    android:paddingStart="@dimen/margin_medium_2">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPaymentIcon"
        android:layout_width="@dimen/margin_large"
        android:layout_height="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_medium"
        android:src="@drawable/ic_baseline_credit_card_primarytextlightcolor_24dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPaymentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivPaymentIcon"
        android:text="Credit card"
        android:textColor="@color/black"
        android:fontFamily="@font/gotham_light"
        android:textStyle="bold"
        android:textSize="@dimen/text_regular_2x"
        android:layout_marginStart="@dimen/margin_large"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPaymentDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPaymentLabel"
        android:layout_alignStart="@id/tvPaymentLabel"
        android:text="Visa, master card, JCB"
        android:fontFamily="@font/gotham_light"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryTextLight"
        android:layout_marginTop="@dimen/margin_card_medium"/>

</RelativeLayout>